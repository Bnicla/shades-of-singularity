---
import BaseLayout from '../layouts/BaseLayout.astro';
import AppendixTOC from '../components/AppendixTOC.astro';
import { getEntry, render } from 'astro:content';
import '../styles/appendix.css';

const appendixEntry = await getEntry('appendix', 'appendix');
const { Content, headings } = await render(appendixEntry);
---

<BaseLayout
  title={appendixEntry.data.title}
  description="An exhaustive taxonomy of 28 possible AI futures, ranked by likelihood."
>
  <header class="appendix-header">
    <h1 class="appendix-title">{appendixEntry.data.title}</h1>
    {appendixEntry.data.subtitle && (
      <p class="appendix-subtitle">{appendixEntry.data.subtitle}</p>
    )}
  </header>

  <div class="appendix-layout">
    <AppendixTOC headings={headings} />

    <div class="appendix-content">
      <Content />
    </div>
  </div>
</BaseLayout>
